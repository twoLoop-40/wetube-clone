extends layout.pug 
block content 
	if errorMessage 
		span=errorMessage 		
	form(method="POST")
		input(placeholder="Title", name="title", type="text", maxLength="80")
		input(placeholder="Description", name="description", type="text", required, minLength="20")
		input(placeholder="Hashtags, seperated by comma", name="hashtags", type="text", required)
		input(type="submit", value="UpLoad Video")
